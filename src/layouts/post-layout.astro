---
import Article from "../components/article.astro";
import Comments from "../components/comments/comments";
import Blog from './blog-layout.astro';
const {
  frontmatter: { title,  pubDate, image, author },
} = Astro.props;
---
<Blog title="Zayez's blog" description="Blog">
  <Article title={title} author={author} image={image} pubDate={pubDate}>
    <slot />
  </Article>
  <Comments client:idle />
</Blog>

